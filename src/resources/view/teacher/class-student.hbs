<div class="container mt-4">
    <h1 class="mb-4">Danh sách Môn học</h1>
    
    {{#if courses.length}}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Mã tín chỉ</th>
                    <th>Tên môn học</th>
                    <th>Số tín chỉ</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <td>{{this.maTinChi}}</td>
                    <td>{{this.tenTinChi}}</td>
                    <td>{{this.soTinChi}}</td>
                    <td>
                        <a href="/teacher/class-student?maTinChi={{this.maTinChi}}" class="btn btn-primary btn-sm">Xem danh sách sinh viên</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <p class="text-muted">Bạn chưa được phân công môn học nào.</p>
    {{/if}}
    
    {{#if selectedCourse}}
    <hr class="my-5">
    
    <h2 class="mb-4">Thông tin môn học: {{tenTinChi}}</h2>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Chi tiết môn học
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Mã tín chỉ:</strong> {{maTinChi}}</p>
                    <p><strong>Tên môn học:</strong> {{tenTinChi}}</p>
                    <p><strong>Số tín chỉ:</strong> {{soTinChi}}</p>
                    <p><strong>Khoa:</strong> {{khoa.tenKhoa}}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Lịch học:</strong> {{lichHoc}}</p>
                    <p><strong>Địa điểm:</strong> {{diaDiem}}</p>
                    <p><strong>Học kỳ:</strong> {{hocKy}}</p>
                    <p><strong>Năm học:</strong> {{namHoc}}</p>
                </div>
            </div>
            {{#if moTa}}
            <div class="mt-3">
                <p><strong>Mô tả:</strong> {{moTa}}</p>
            </div>
            {{/if}}
        </div>
    </div>
    
    <h3 class="mb-3">Danh sách sinh viên</h3>
    
    {{#if students.length}}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Mã SV</th>
                    <th>Họ đệm</th>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Lớp</th>
                    <th>Ngành</th>
                    <th>Khóa học</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>{{this.maSV}}</td>
                    <td>{{this.hoDem}}</td>
                    <td>{{this.ten}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.lop}}</td>
                    <td>{{this.nganh}}</td>
                    <td>{{this.khoaHoc}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-info">
        Chưa có sinh viên nào đăng ký môn học này.
    </div>
    {{/if}}
    {{/if}}
</div>

