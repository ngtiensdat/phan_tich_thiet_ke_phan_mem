<div class="container-fluid mt-3">
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <input type="text" class="form-control w-25" placeholder="Tìm kiếm thông tin...">
                    <div class="d-flex align-items-center">
                        <span class="me-2">{{user.hoDem}} {{user.ten}}</span>
                        <i class="fa fa-user-circle fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <button id="prevMonth" class="btn btn-primary">←</button>
                    <h2 id="currentMonthYear" class="mb-0">Tháng 3 - 2025</h2>
                    <button id="nextMonth" class="btn btn-primary">→</button>
                </div>
                <div class="card-body">
                    <div class="calendar-grid" id="calendarDays"></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Lịch dạy</h2>
                </div>
                <div class="card-body">
                    <p id="selectedDate" class="text-muted">Chọn ngày để xem lịch</p>
                    <ul id="eventsList" class="list-group"></ul>
                </div>
            </div>
        </div>
    </div>
</div>

