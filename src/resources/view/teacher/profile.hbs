{{!-- views/teachers/profile.hbs --}}
<div class="container">
    <div id="teacher-info" class="teacher-info">
        <div class="teacher-info-container">
            <div class="avatar-container">
                <img id="teacher-avatar" src="{{teacherInfo.anhDaiDien}}" alt="Ảnh đại diện giảng viên {{teacherInfo.ten}}" class="avatar">
                <input type="file" id="avatar-upload" accept="image/*" style="display: none;">
                <button id="change-avatar-btn" class="btn btn-sm btn-outline-primary" style="display: none;">Đổi ảnh</button>
            </div>
            <div class="teacher-info-content">
                <div class="teacher-info-title">THÔNG TIN GIẢNG VIÊN</div>
                <div class="teacher-info-grid">
                    <p><strong>Mã GV:</strong> <input type="text" id="teacher-maGV" value="{{teacherInfo.maGV}}" disabled></p>
                    <p><strong>Họ và đệm:</strong> <input type="text" id="teacher-hoDem" value="{{teacherInfo.hoDem}}" disabled></p>
                    <p><strong>Ngày sinh:</strong> <input type="date" id="teacher-ngaySinh" value="{{formatDateInput teacherInfo.ngaySinh}}" disabled></p>
                    <p><strong>Tên:</strong> <input type="text" id="teacher-ten" value="{{teacherInfo.ten}}" disabled></p>
                    <p><strong>Email:</strong> <input type="email" id="teacher-email" value="{{teacherInfo.email}}" disabled></p>
                    <p><strong>Khoa quản lý:</strong> <input type="text" id="teacher-tenKhoa" value="{{teacherInfo.tenKhoa}}" disabled></p>
                    <p><strong>Vai trò:</strong> <input type="text" id="teacher-vaiTro" value="{{teacherInfo.vaiTro}}" disabled></p>
                </div>
                <div class="teacher-actions">
                    <button id="edit-info-btn" class="btn btn-primary">Cập nhật thông tin</button>
                    <button id="save-info-btn" class="btn btn-success" style="display: none;">Lưu thông tin</button>
                    <button id="cancel-edit-btn" class="btn btn-secondary" style="display: none;">Hủy</button>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="/css/profile.css">
<script src="/js/profile.js"></script>