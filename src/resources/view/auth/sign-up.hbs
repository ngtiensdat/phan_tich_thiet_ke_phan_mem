<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="signup-container">
                    <div class="login-logo">
                        <img src="https://phenikaa-uni.edu.vn:3600/md/vi/logo-dh-phenikaa-h-vn_20220217083708.png"
                            alt="Phenikaa University" class="img-fluid">
                    </div>

                    <h2 class="login-title">Đăng ký tài khoản</h2>

                    <form id="signupForm" action="/auth/sign-up" method="POST">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="hoDem" name="hoDem" placeholder="Họ đệm" required>
                            <label for="hoDem">Họ đệm</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="ten" name="ten" placeholder="Tên" required>
                            <label for="ten">Tên</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" id="ngaySinh" name="ngaySinh" required>
                            <label for="ngaySinh">Ngày sinh</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                            <label for="email">Email</label>
                            <div id="emailHelpBlock" class="form-text">
                                Sinh viên: @st.phenikaa-uni.edu.vn | Giảng viên: @phenikaa-uni.edu.vn
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu" required>
                            <label for="password">Mật khẩu</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                            <label for="confirmPassword">Nhập lại mật khẩu</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <select class="form-select" id="role" name="role" required>
                                <option value="" disabled selected>Chọn loại tài khoản</option>
                                <option value="student">Sinh viên</option>
                                <option value="teacher">Giảng viên</option>
                            </select>
                            <label for="role">Loại tài khoản</label>
                        </div>

                        <div id="alertMessage" class="alert alert-danger mt-3" style="display: none;"></div>

                        <div class="form-buttons">
                            <button type="submit" class="btn btn-phenikaa">Đăng ký</button>
                            <a href="/auth/sign-in" class="btn btn-outline-phenikaa">Quay lại đăng nhập</a>
                        </div>
                    </form>

                    <div class="login-footer">
                        <p>Đã có tài khoản? <a href="/auth/sign-in">Đăng nhập ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/sign_in.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sign_up.js"></script>
</body>