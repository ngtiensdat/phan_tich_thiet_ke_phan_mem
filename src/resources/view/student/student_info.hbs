<div id="student-info" class="student-info">
        <div class="student-info-container">
                <div class="avatar-container">
                        <img id="student-avatar" src="{{studentInfo.anhDaiDien}}" alt="Ảnh đại diện" class="avatar">
                        <input type="file" id="avatar-upload" accept="image/*" style="display: none;">
                        <button id="change-avatar-btn" onclick="document.getElementById('avatar-upload').click();"
                                style="display: none;">Đổi ảnh</button>
                </div>
                <div class="student-info-content">
                        <div class="student-info-title">THÔNG TIN CƠ BẢN</div>
                        <div class="student-info-grid">
                                <p><strong>Mã SV:</strong> <input type="text" id="student-maSV"
                                                value="{{studentInfo.maSV}}" disabled>
                                </p>
                                <p><strong>Họ và đệm:</strong> <input type="text" id="student-hoDem"
                                                value="{{studentInfo.hoDem}}" disabled></p>
                                <p><strong>Ngày sinh:</strong> <input type="date" id="student-ngaySinh"
                                                value="{{formatDateInput studentInfo.ngaySinh}}" disabled></p>
                                <p><strong>Tên:</strong> <input type="text" id="student-ten" value="{{studentInfo.ten}}"
                                                disabled></p>
                                <p><strong>Khóa đào tạo:</strong> <input type="text" id="student-khoaHoc"
                                                value="{{studentInfo.khoaHoc}}" disabled></p>
                                <p><strong>Lớp:</strong> <input type="text" id="student-lop" value="{{studentInfo.lop}}"
                                                disabled></p>
                                <p><strong>Niên khóa:</strong> <input type="text" id="student-nienKhoa"
                                                value="{{studentInfo.nienKhoa}}" disabled></p>
                                <p><strong>Khoa quản lý:</strong> <input type="text" id="student-tenKhoa"
                                                value="{{studentInfo.tenKhoa}}" disabled></p>
                                <p><strong>Email:</strong> <input type="email" id="student-email"
                                                value="{{studentInfo.email}}" disabled></p>
                                <p><strong>Ngành:</strong> <input type="text" id="student-nganh"
                                                value="{{studentInfo.nganh}}" disabled>
                                </p>
                                <p><strong>Giới tính:</strong>
                                        <select id="student-gioiTinh" disabled>
                                                <option value="Nam" {{#if (eq studentInfo.gioiTinh "Nam"
                                                        )}}selected{{/if}}>Nam</option>
                                                <option value="Nữ" {{#if (eq studentInfo.gioiTinh "Nữ"
                                                        )}}selected{{/if}}>Nữ</option>
                                                <option value="Khác" {{#if (eq studentInfo.gioiTinh "Khác"
                                                        )}}selected{{/if}}>Khác</option>
                                        </select>
                                </p>
                                <p><strong>Hệ đào tạo:</strong> <input type="text" id="student-heDaoTao"
                                                value="{{studentInfo.heDaoTao}}" disabled></p>
                                <p><strong>Trạng thái:</strong> <input type="text" id="student-trangThai"
                                                value="{{studentInfo.trangThai}}" disabled></p>
                                <p><strong>Vai trò:</strong> <input type="text" id="student-vaiTro"
                                                value="{{studentInfo.vaiTro}}" disabled></p>
                                <p><strong>Chương trình đào tạo:</strong> <input type="text"
                                                id="student-chuongTrinhDaoTao" value="{{studentInfo.chuongTrinhDaoTao}}"
                                                disabled></p>
                        </div>
                        <button id="edit-info-btn" onclick="enableEdit()">Cập nhật thông tin</button>
                        <button id="save-info-btn" onclick="saveStudentInfo()" style="display: none;">Lưu thông
                                tin</button>
                </div>
        </div>
</div>

<link rel="stylesheet" type="text/css" href="/css/student_info.css">
<script src="/js/student_info.js"></script>